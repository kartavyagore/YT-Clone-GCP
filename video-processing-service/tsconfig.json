{
  "compilerOptions": {
    "rootDir": "src",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",  
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
